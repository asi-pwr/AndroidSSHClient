<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">


    <fragment
        android:id="@+id/navbar_fragment"
        android:name="com.asi.sshclient.NavBar.NavBarFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/shortcut_fragment"
        android:name="com.asi.sshclient.Shortcut.ShortcutFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar_fragment" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/shellWrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.asi.sshclient.ui.main.ShellEditText
                android:id="@+id/shellEditText"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:elevation="1dp"
                android:ems="10"
                android:gravity="start|top"
                android:imeActionId="0"
                android:inputType="text"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/shell"
                app:layout_constraintTop_toTopOf="@id/shell"
                app:layout_constraintStart_toStartOf="@id/shell"
                app:layout_constraintEnd_toEndOf="@id/shell"/>

            <TextView
                android:id="@+id/shell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp"
                android:minHeight="700dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


